@page
@model WebApp.Pages.Roles.DeleteModel
@{
    ViewData["Title"] = "Delete Role";
}

@if (Model.DRole != null)
{
    <div class="row justify-content-center align-items-center">
        <div class="col col-md-10 col-lg-8 col-xl-6">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <h3>Are you sure you want to delete the role @Model.DRole.Name ?</h3>
            <div>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="DRole.Id" />
                    <input type="hidden" asp-for="DRole.Name" />
                    <input type="submit" value="Delete Role" class="btn btn-danger" /> |
                    <a asp-page="./Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
}
