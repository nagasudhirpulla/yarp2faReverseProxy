@page
@model WebApp.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form asp-action="Edit">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="UpUser.Id" type="hidden" />
            <div class="form-group">
                <label asp-for="UpUser.Username"></label>
                <input asp-for="UpUser.Username" class="form-control" />
                <span asp-validation-for="UpUser.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpUser.UserRole"></label>
                <select asp-for="UpUser.UserRole" class="form-control" asp-items="Model.URoles"></select>
                <span asp-validation-for="UpUser.UserRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpUser.Email"></label>
                <input asp-for="UpUser.Email" class="form-control" />
                <span asp-validation-for="UpUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpUser.PhoneNumber"></label>
                <input asp-for="UpUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="UpUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpUser.Password"></label>
                <input asp-for="UpUser.Password" class="form-control" />
                <span asp-validation-for="UpUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpUser.ConfirmPassword"></label>
                <input asp-for="UpUser.ConfirmPassword" class="form-control" />
                <span asp-validation-for="UpUser.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpUser.IsTwoFactorEnabled"></label>
                <input asp-for="UpUser.IsTwoFactorEnabled" class="form-control" />
                <span asp-validation-for="UpUser.IsTwoFactorEnabled" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Save Changes</button>
        </form>
        <a asp-page="/Users/Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}