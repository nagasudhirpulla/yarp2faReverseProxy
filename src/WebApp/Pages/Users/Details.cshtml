@page
@model WebApp.Pages.Users.DetailsModel
@{
    ViewData["Title"] = "My Details";
}

<h3>My Details</h3>

<table class="table table-bordered table-striped">
    <tr>
        <td>Name</td>
        <td>@Model.CUser.Username</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@Model.CUser.Email</td>
    </tr>
    <tr>
        <td>Phone</td>
        <td>@Model.CUser.PhoneNumber</td>
    </tr>
    <tr>
        <td>Role</td>
        <td>
            @* @string.Join(", ", Model.CUser.UserRoles) *@
            <ul>
                @foreach (var roleName in Model.CUser.UserRoles)
                {
                    <li>@roleName</li>
                }
            </ul>
            <a asp-page="./AddRole" asp-route-id="@Model.CUser.UserId">Add Role to User</a>
        </td>
    </tr>
    <tr>
        <td>Two Factor</td>
        <td>@Model.CUser.IsTwoFactorEnabled</td>
    </tr>
</table>
<div>
    <a asp-page="./Index">Back to List</a>
</div>