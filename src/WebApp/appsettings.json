{
  "AppName": "Acme Gateway application",
  "ConnectionStrings": {
    "DefaultConnection": "connString"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "EmailSettings": {
    "Username": "u",
    "Password": "p",
    "Domain": "d",
    "MailAddress": "m",
    "HostName": "h"
  },
  "IdentityInit": {
    "AdminEmail": "abc@abc.com",
    "AdminPassword": "pass@345",
    "AdminUserName": "abcd",
    "GuestEmail": "def@def.com",
    "GuestPassword": "pass@678",
    "GuestUserName": "def"
  },
  "AllowedHosts": "*",
  "RolePolicies": {
    "app1_access": [ "app1AccessRole" ],
    "app2_access": [ "app2AccessRole" ]
  },
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "AuthorizationPolicy": "gatewayAccess",
        "Match": {
          "Hosts": [ "localhost" ]
        }
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://localhost:10001/"
          }
        }
      }
    }
  }
}
